<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LearnXamarin"
             x:Class="LearnXamarin.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            
            <Style x:Key="MainMenuButton" BasedOn="{StaticResource SegoeButton}" TargetType="Button">
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="HeightRequest" Value="100"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
            
            <Style x:Key="MainPageGrid" TargetType="Grid">
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="Margin" Value="25,25,25,25"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Style="{StaticResource Background}">
        <Grid Style="{StaticResource MainPageGrid}">
            <Button x:Name="SignUpButton" Text="Sign Up" Grid.Row="0" Grid.Column="0" Style="{StaticResource MainMenuButton}"/>
            <Button x:Name="LogInButton" Text="Log In" Grid.Row="1" Grid.Column="0" Style="{StaticResource MainMenuButton}"/>
        </Grid>
    </StackLayout>

</ContentPage>
